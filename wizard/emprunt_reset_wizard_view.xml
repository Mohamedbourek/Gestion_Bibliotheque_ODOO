<odoo>
    <record id="view_emprunt_reset_wizard_form" model="ir.ui.view">
        <field name="name">emprunt.reset.wizard.form</field>
        <field name="model">gestion_biblio.emprunt.reset.wizard</field>
        <field name="arch" type="xml">
            <form string="Réinitialiser Emprunts">
                <p class="alert alert-warning">
                    Êtes-vous sûr de vouloir supprimer tous les emprunts de cet emprunteur ?
                </p>
                <footer>
                    <button string="Confirmer" type="object" name="action_reset_emprunts" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>